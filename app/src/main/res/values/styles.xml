<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Line denomination frame. -->
    <style name="LineDenominationFrame">
        <item name="android:background">@color/colorLineDenominationBackground</item>
        <item name="android:textColor">@color/colorLineDenominationText</item>
        <item name="android:textSize">@dimen/line_denomination_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal|bold</item>
    </style>

</resources>
