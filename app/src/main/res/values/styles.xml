<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Line denomination frame. -->
    <style name="LineDenominationFrame">
        <item name="android:background">@color/colorLineDenominationBackground</item>
        <item name="android:textColor">@color/colorLineDenominationText</item>
        <item name="android:textSize">@dimen/line_denomination_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal|bold</item>
    </style>

    <!-- Cards. -->
    <style name="Card" parent="Base.CardView">
        <item name="android:layout_margin">8dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardCornerRadius">0dp</item>
    </style>

    <style name="CardLinearLayout">
        <item name="android:padding">4dp</item>
    </style>

    <style name="CardLabel">
        <item name="android:textStyle">bold|normal</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="CardData">
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
